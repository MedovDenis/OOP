<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10" vgap="10" fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
    <Button text="CE" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
    <TextField text="0" fx:id="tfResult" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

    <Button text="sqrt" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
    <Button text="pow" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <Button text="*" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button text="/" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="-" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
    <Button text="9" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
    <Button text="8" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button text="7" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="+" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="4" GridPane.rowIndex="4"/>
    <Button text="6" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
    <Button text="5" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button text="4" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="=" onAction="#btnClick" prefHeight="50" prefWidth="50" GridPane.columnIndex="4" GridPane.rowIndex="5" GridPane.rowSpan="2"/>
    <Button text="3" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
    <Button text="2" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <Button text="1" onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button text="." onAction="#btnClick" prefHeight="25" prefWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="6"/>
    <Button text="0" onAction="#btnClick" prefHeight="25" prefWidth="100" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6"/>
</GridPane>







